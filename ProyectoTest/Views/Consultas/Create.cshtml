@model ProyectoTest.Consulta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Tienda.cshtml";
}

<style>
    body {
        background-image: url('https://static.vecteezy.com/system/resources/previews/007/355/451/non_2x/abstract-elegant-green-waves-lines-on-black-background-free-vector.jpg');
    }

    a {
        Color: white;
    }
</style>

<h2>Nueva COnsulta</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <br />
    <div class="form-horizontal">
        <h4 class="text-white"> Nueva Consulta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-white">
            Nombre-Apellido
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group text-white">
            Componente - Caso
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.mascota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mascota, "", new { @class = "text-danger" })

            </div>
        </div>
        <br />
        <div class="form-group text-white">
            Fecha de Consulta
            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_consulta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha_consulta, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="d-flex justify-content-between">
                <p>
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a class="btn btn-danger" href="@Url.Action("Index","Consultas")">Listado</a>
                </p>
            </div>
        </div>
    </div>
}
